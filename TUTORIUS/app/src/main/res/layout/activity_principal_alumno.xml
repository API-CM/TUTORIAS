<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal_alumno"
    android:weightSum="1">

    <include layout="@layout/activity_cabecera_alumno"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView1"
            android:text="@string/title_activity_datos_cita"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:textColor="?attr/actionMenuTextColor"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_weight="0.13"
        android:weightSum="1">

        <ListView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/citas_alumno"
            android:layout_weight="2.88" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="285dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:text="Consultar / Pedir cita"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/boton"
            android:layout_weight="1.24" />

    </LinearLayout>

</LinearLayout>
